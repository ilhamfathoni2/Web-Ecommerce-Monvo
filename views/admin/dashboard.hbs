{{> header}}
{{> navauth}}

<div class="container mt-3 mb-3">
    {{#if message}}
        <div class="alert alert-{{message.type}} mt-5 mb-3" role="alert">
            {{message.message}}
        </div>
    {{/if}}
</div>

<!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="/"><i class="fa fa-home"></i> Home</a>
                        <span>Dashboard</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">

                <div class="card mb-4">
                <div class="card-body">
                    <a href="/brand" class="btn btn-primary">Add Brand</a>
                    <table class="table table-hover mt-3">        
                        <thead>
                            <tr>
                                <th>Brand Name</th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#each dataBrand}}
                            <tr>
                                <td>{{this.name}}</td>
                            </tr>
                        {{/each}}   
                        </tbody>
                    </table>
                </div>
                </div>

                <div class="card mb-4">
                <div class="card-body">
                    <a href="/category" class="btn btn-primary">Add Category</a>
                    <table class="table table-hover mt-3">
                        <thead>
                            <tr>
                                <th>Category</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dataCategory}}
                            <tr>
                                <td>{{this.name}}</td>
                            </tr>
                            {{/each}}  
                        </tbody>
                    </table>
                </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <a href="/product" class="btn btn-primary">Add Product</a>
                        <table class="table table-hover mt-3">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each dataProduct}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.description}}</td>
                                    <td class="text-danger">{{this.price}}</td>
                                    <td>{{this.stock}}</td>
                                </tr>
                                {{/each}}  
                            </tbody>
                        </table>
                    </div>
                </div>
           
        </div>
    </section>
    <!-- Shop Section End -->


{{> footer}}