{{> header}}
{{> navauth}}

<div class="container mt-3">
    <div class="d-flex justify-content-center mt-3 mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="">Brand</a></li>
            <li class="breadcrumb-item"><a href="/category">Category</a></li>
            <li class="breadcrumb-item"><a href="">Product</a></li>
        </ol>
    </nav>
    </div>
    
    <div class="d-flex justify-content-center mt-2 mb-3">
        <div class="card col-sm-6 mt-5">
            <div class="card-body">
                {{#if message}}
                    <div class="alert alert-{{message.type}} mt-5 mb-3" role="alert">
                        {{message.message}}
                    </div>
                {{/if}}
                <h3 class="card-title text-center mt-4 mb-4">Input Brand</h3>
                <form action="/brand" method="POST">
                    <div class="form-group">
                        <label>Brand name</label>
                        <input type="text" name="name" class="form-control" placeholder="Enter brand">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block mt-5 mb-3">Save</button>
                </form>
                
                <table class="table table-hover mt-4">
                    <thead>
                        <tr>
                            <th>Brand</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td class="text-center">
                                <a href="brand/edit/{{this.id}}" class="btn btn-warning">Edit</a>
                                <a href="brand/delete/{{this.id}}" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{{> footerauth}}